{
  "name": "@aliou/pi-toolchain",
  "version": "0.3.5",
  "packageManager": "pnpm@10.26.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/aliou/pi-toolchain"
  },
  "keywords": [
    "pi-package",
    "pi-extension",
    "pi",
    "toolchain"
  ],
  "pi": {
    "extensions": [
      "./src/index.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "README.md"
  ],
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@aliou/pi-utils-settings": "^0.4.0",
    "@aliou/sh": "^0.1.0"
  },
  "peerDependencies": {
    "@mariozechner/pi-coding-agent": ">=0.51.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@changesets/cli": "^2.27.11",
    "@mariozechner/pi-coding-agent": "0.52.7",
    "@mariozechner/pi-tui": "0.52.7",
    "@sinclair/typebox": "^0.34.48",
    "@types/node": "^25.0.10",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "@mariozechner/pi-ai": "$@mariozechner/pi-coding-agent",
      "@mariozechner/pi-tui": "$@mariozechner/pi-coding-agent"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "biome check",
    "format": "biome check --write",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm changeset publish"
  },
  "peerDependenciesMeta": {
    "@mariozechner/pi-coding-agent": {
      "optional": true
    }
  }
}
